{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ebop",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#ocaml"
		},
		{
			"include": "#functions"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "support.type.proof",
				"match": "\\b(Expression|Index)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment",
				"match": "\\%(.*)"
			}]
		},
		"strings":{
			"patterns": [{
				"name": "string.quoted.double",
				"begin": "\"",
				"end": "\""}]
		},
		"numbers":{
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0|[1-9][0-9]*)\\b"
			}]
		},
		"functions":{
			"patterns": [{
					"name": "support.function",
					"match": "\\b(\\w+\\.)+\\w+\\b"
				}]},
		"ocaml": {
			"patterns": [{
				"name": "meta.embedded.block.ocaml",
				"begin": "<\\\\OCaml>",
				"end": "</OCaml>",
				"patterns":[{
					"include": "source.ocaml"
				}]
			}]
		}
	},
	"scopeName": "source.proof"
}