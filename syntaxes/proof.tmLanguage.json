{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ebop",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.proof",
				"match": "\\b(Expression|Index)\\b"
			},
			{
				"match": "\\%(.*)",
           		"name": "comment"}
					]
		},
		"functions": {
			"patterns": [{
				"name": "meta.definition.function.proof entity.name.function.proof",
				"match": "[a-zA-Z0-9]+\\(.+\\)"
			}]
		},
		"function-call": {
			"patterns": [{
				"name": "meta.definition.function.proof entity.name.function.proof",
				"comment": "Regular function call of the type \"name(args)\" (borrowed to python grammar)",
				"begin": "(?x)\n  \\b(?=\n    ([[:alpha:]_]\\w*) \\s* (\\()\n  )\n",
				"end": "(\\))"
			}]
		},
		"strings": {
			"name": "string.quoted.double.proof",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.proof",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.proof"
}